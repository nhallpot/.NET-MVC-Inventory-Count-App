
@{
    Layout = null;
}
<!DOCTYPE html>

<html>
    <head>
        <title>Log Out</title>
        <meta name="viewport" content="width=device-width" />
        <link rel="stylesheet" href="~/Content/bootstrap.min.css" />
        <link rel="stylesheet" href="~/Content/login.css" />
        @Scripts.Render("~/bundles/modernizr")
        @Scripts.Render("~/bundles/jquery")
        @Scripts.Render("~/bundles/bootstrap")
    </head>

    <body>
            <div class="loading-in-progress" hidden="hidden"></div>
            <div>
                @using (Html.BeginForm())
                {
                    <h1> Are you sure you want to log-out?</h1>
                    <h4>If yes, you will have to log back in to access this count.</h4>
                    <div class="input-group">
                        <input type="submit" class="btn btn-primary font-size remove-unsaved-changes post-button" name="confirm" value="Log-Out" />
                        <input type="submit" class="btn btn-primary font-size remove-unsaved-changes post-button" name="confirm" value="Cancel" />
                    </div>
                }
            </div>
    </body>
</html>
